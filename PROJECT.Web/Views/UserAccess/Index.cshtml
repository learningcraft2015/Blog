@model IEnumerable<PROJECT.Core.Models.ViewModels.UserAccessViewModel>
@using PROJECT.Core.Helpers;
@{
    ViewBag.Title = "User Access List";

}


<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2><i class="glyphicon glyphicon-user"></i>User Access List</h2>

            </div>
            <div class="box-content">
                <!-- put your content here -->
                @if (ApplicationHelpers.CheckRoleUserAccess(ActionUserAccessEnum.Create))
                {

                    <div class="row">
                        <div class="box col-md-12">

                            <a class="btn btn-primary" href="@Url.Action("Create")">
                                <i class="glyphicon glyphicon-edit icon-white"></i>
                                Create New
                            </a>
                        </div>
                    </div>
                }
                <br />
                <table class="table table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserAccessTitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ParentId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Url)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CssClass)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SortOrder)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserAccessStatus)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserAccessTitle)
                            </td>

                            <td>
                                @Enum.GetName(typeof(UserAccessParentIdEnum), item.ParentId)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Url)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CssClass)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SortOrder)
                            </td>
                            <td>


                                @Enum.GetName(typeof(StatusEnum), item.UserAccessStatus)
                            </td>
                            <td>
                                @if (ApplicationHelpers.CheckRoleUserAccess(ActionUserAccessEnum.Edit))
                                {


                                    <a class="btn btn-info" href="@Url.Action("Edit", new { id = item.UserAccessId })">
                                        <i class="glyphicon glyphicon-edit icon-white"></i>
                                        Edit
                                    </a>
                                }

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>